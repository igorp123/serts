<p id="notice"><%= notice %></p>

<p>Накладная № <%= @invoice.number%></p>

<p>Дата <%= @invoice.date.strftime("%d.%m.%Y") %></p>

<p>ИНН <%= @invoice.inn%></p>

<table class="table table-bordered customer_drugs_table">
  <thead class="table-secondary">
    <tr class="text-center ">
    <th class="align-middle">Номенклатура</th>
    <th class="align-middle">Серия</th>
    </tr>
  </thead>
  <% @drugs.each do |drug| %>
  <tr>
    <td><%= link_to "#{drug.name}", drug %></td>
    <td><%= link_to "#{drug.serie}", drug %></td>
  </tr>
<% end %>  

</table>




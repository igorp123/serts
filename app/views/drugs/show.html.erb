<div class="h4">
  <%= @drug.name %>
</div>

<div class="h5 buffer-top">
  Серия <span class="font-weight-bold"><%= @drug.serie %></span>
</div>

<div class="drug-serts buffer-top">
  <%= render partial: 'serts/sert', collection: @drug.serts.except(@new_sert) %>
</div>

<div class="sert-image-form">
  <%#= render partial: 'serts/form', locals: {sert: @new_sert || @drug.serts.build} %>
</div>

<%= link_to 'Скачать в архиве', download_drug_path(@drug.token, format: :zip) %>
<%= link_to 'Скачать pdf', download_drug_path(@drug.token, format: :pdf) %>

<div class="buffer-top">
  <%= link_to 'Назад', :back %>
</div>
